    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Calculator Website</title>
    <style>
        #total {
            color: white;
            background-color: green;
            padding: 10px;
            display: inline-block;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        #calculator {
            width: 100%;
            text-align: center;
            position: relative;
        }

        #logo {
            position: absolute;
            left: 10px;
            top: 10px;
            width: 50px;
            border-radius: 10px;
            margin-right: 20px;
        }

        #inputNumber {
            width: 300px;
            height: 60px;
            font-size: 16px;
        }

        #rectangles {
            text-align: center;
            margin-top: 20px;
        }

        .rectangle-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .rectangle {
            width: 150px;
            height: 50px;
            margin: 5px;
            text-align: center;
            line-height: 50px;
            cursor: pointer;
            border: 1px solid #ccc;
            overflow: hidden;
            white-space: nowrap;
            transition: background-color 0.3s ease;
        }

        .rectangle.clicked {
            background-color: lightgreen;
            transition: background-color 0.01s ease-out;
        }

        .close-btn {
            cursor: pointer;
            font-weight: bold;
            color: red;
            margin-left: 5px;
            display: inline-block;
        }

        #output {
            margin-top: 20px;
        }
    </style>
